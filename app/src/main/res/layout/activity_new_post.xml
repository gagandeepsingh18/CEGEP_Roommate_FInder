<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <EditText
        android:id="@+id/NewPostTitleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Enter Post Title"/>

        <ImageView
            android:id="@+id/NewPostImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:minHeight="100dp"/>


        <EditText
            android:id="@+id/NewPostDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Enter Post Description"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="100dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/NewPostButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish Ad"
            android:gravity="end"/>
    </LinearLayout>

</ScrollView>