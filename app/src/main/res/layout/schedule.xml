<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schedule">

    <ScrollView
        android:id="@+id/m"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/NewCaHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="@android:color/black"
            android:gravity="center"
            android:text="Schdeule Meeting"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:hint="Enter Meeting Name"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Calander"
            android:id="@+id/Calander_show"/>

        <EditText
            android:id="@+id/show_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/yyyy"
            android:inputType="date"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/picktime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hhmm (Enter Time)"
            android:inputType="date"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:hint="Enter Location"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/recipeint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:hint="Enter Email Id of Recipients"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textSize="16dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:hint="Email Recipient 1"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            />
        <EditText
            android:id="@+id/email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:hint="Email Recipiennt 2"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            />
        <EditText
            android:id="@+id/email3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:hint="email1 Recipient 3"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            />

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/black"
            android:text="Create Meeting"
            android:onClick="sendEmail"
            android:textColor="@android:color/white">


        </Button>


    </LinearLayout>

    </ScrollView>


</LinearLayout>